@{
    ViewData["Title"] = "Home Page";
}

@model Survey

<div class="text-center">
  <form asp-action="result" asp-controller="Home" method="post">
    <div class="container mt-3 border rounded">
      <div class="row mb-3 mt-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Name">
          <span asp-validation-for="Name"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Location" class="col-sm-2 col-form-label">Dojo Location:</label>
        <div class="col-sm-10">
          <select asp-for="Location" class="form-select">
            <option value="">Choose Location</option>
            <option value="San Jose">San Jose</option>
            <option value="Seattle">Seattle</option>
            <option value="Bellevue">Bellevue</option>
          </select>
          <span asp-validation-for="Location"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Language" class="col-sm-2 col-form-label">Favorite Language:</label>
        <div class="col-sm-10">
          <select asp-for="Language" class="form-select">
            <option value="">Choose Favorite Language</option>
            <option value="JavaScript">JavaScript</option>
            <option value="Python">Python</option>
            <option value="CSharp">C#</option>
            <option value="Java">Java</option>
          </select>
          <span asp-validation-for="Language"></span>
        </div>
      </div>

      <label asp-for="Comment" class="form-label">Comment (optional):</label>

      <div class="mb-3">
        <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
